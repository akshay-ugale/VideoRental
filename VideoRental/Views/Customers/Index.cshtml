@model IEnumerable<VideoRental.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

@if(@Model.Count() > 0)
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name,"Customer","Customers",new {Id=item.Id})
            </td>
        </tr>
    }
    </tbody>
    </table>
}
else{
    <p>No Customer registered</p>
}


